{
	"manifest_version": 2,

	"name": "Comixology Backup",
	"description": "Save your Comixology comics as standard CBZ files",
	"version": "1.5.3",
	"minimum_chrome_version": "26",
	
	"icons": {
		"128": "logo128.png",
		"48": "logo48.png"
	},
	
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"tabs",
		"activeTab",
		"storage",
		"*://*/"
	],
	
	"background": {
		"scripts": [
			"bgPage.js",
			"jszip.min.js"
		]
	},
	
	"content_scripts": [
		{
			"matches": ["*://www.comixology.com/comic-reader/*","*://www.comixology.eu/comic-reader/*","*://www.comixology.co.uk/comic-reader/*","*://www.comixology.fr/comic-reader/*","*://www.comixology.de/comic-reader/*"],
			"js": ["common.js", "reactivateDom.js"],
			"run_at": "documentStart"
		}, {
			"matches": ["*://www.comixology.com/comic-reader/*","*://www.comixology.eu/comic-reader/*","*://www.comixology.co.uk/comic-reader/*","*://www.comixology.fr/comic-reader/*","*://www.comixology.de/comic-reader/*"],
			"js": ["diffMatchPatch.js", "common.js", "comicReader.js"],
			"run_at": "document_end"
		}, {
			"matches": ["*://www.comixology.com/my-books/*","*://www.comixology.eu/my-books/*","*://www.comixology.co.uk/my-books/*","*://www.comixology.fr/my-books/*","*://www.comixology.de/my-books/*","*://www.comixology.com/my-comics/*","*://www.comixology.eu/my-comics/*","*://www.comixology.co.uk/my-comics/*","*://www.comixology.fr/my-comics/*","*://www.comixology.de/my-comics/*"],
			"js": ["diffMatchPatch.js", "common.js", "myBooks.js"],
			"run_at": "document_end"
		}
	],
	
	"options_page": "options.html",
		
	"web_accessible_resources": ["ajax-loader.gif"]
}
